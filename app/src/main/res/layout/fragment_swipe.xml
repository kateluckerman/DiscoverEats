<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SwipeFragment">

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ivX"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/x_icon" />

            <ImageView
                android:id="@+id/ivFork"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/fork_icon" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMainImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvCategories"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="30sp"
            tools:text="Restaurant Name" />

        <TextView
            android:id="@+id/tvWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/horizontalLine"
            android:layout_alignStart="@+id/tvName"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            tools:text="website-of-restaurant.com" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvWebsite"
            android:layout_alignStart="@+id/tvName"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            tools:text="Short North" />

        <TextView
            android:id="@+id/tvCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLocation"
            android:layout_alignStart="@id/tvName"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            tools:text="Mediterranean, Greek" />


        <ImageView
            android:id="@+id/ivRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvPrice"
            android:layout_alignStart="@+id/tvPrice"
            android:layout_alignTop="@+id/tvName"
            android:layout_alignEnd="@+id/tvPrice"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:foregroundGravity="center_horizontal"
            tools:srcCompat="@drawable/stars_small_0" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/horizontalLine"
            android:layout_alignEnd="@+id/ivMainImage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            tools:text="$$$" />

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/llButtons"
            android:layout_marginTop="8dp"
            android:background="@color/black" />

    </RelativeLayout>
</layout>